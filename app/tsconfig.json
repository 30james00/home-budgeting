{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
  },
  "baseUrl": "./assets",
  "paths": {
    "@/*": [
      "./js/*"
    ],
    "styles/*": [
      "./css/*"
    ]
  }
}